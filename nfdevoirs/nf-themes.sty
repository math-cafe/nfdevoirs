\RequirePackage{etoolbox} % Pour \ifstrequal 

% Commande interne pour appliquer un thème 
% Prend le nom du thème en argument 
\newcommand{\nf@applytheme}[1]{ 
    \ifstrequal{#1}{nb}{% 
        % Thème Noir & Blanc 
        \definecolor{nfcolpartie}{RGB}{0,0,0} 
        \definecolor{nfcolexercice}{RGB}{89,89,89} 
        \definecolor{nfcolpoints}{RGB}{128,128,128} 
        \definecolor{nfcolaccent}{RGB}{150,150,150} 
        \definecolor{nfcolbglight}{RGB}{240,240,240} 
    }{% 
        \ifstrequal{#1}{orange}{% 
            % Thème Orange 
            \definecolor{nfcolpartie}{RGB}{230,126,34} 
            \definecolor{nfcolexercice}{RGB}{211,84,0} 
            \definecolor{nfcolpoints}{RGB}{100,100,100} 
            \definecolor{nfcolaccent}{RGB}{183,149,11} 
            \definecolor{nfcolbglight}{RGB}{254,249,231} 
        }{% 
            \ifstrequal{#1}{vert}{% 
                % Thème Vert 
                \definecolor{nfcolpartie}{RGB}{39,130,67} 
                \definecolor{nfcolexercice}{RGB}{88,181,115} 
                \definecolor{nfcolpoints}{RGB}{100,100,100} 
                \definecolor{nfcolaccent}{RGB}{101,116,68} 
                \definecolor{nfcolbglight}{RGB}{240,248,242} 
            }{% 
                \ifstrequal{#1}{violet}{% 
                    % Thème Violet 
                    \definecolor{nfcolpartie}{RGB}{107,70,193} 
                    \definecolor{nfcolexercice}{RGB}{142,126,234} 
                    \definecolor{nfcolpoints}{RGB}{100,100,100} 
                    \definecolor{nfcolaccent}{RGB}{123,104,137} 
                    \definecolor{nfcolbglight}{RGB}{248,246,255} 
                }{% 
                    % Thème par défaut : moderne 
                    \definecolor{nfcolpartie}{RGB}{41,128,185} 
                    \definecolor{nfcolexercice}{RGB}{102,126,234} 
                    \definecolor{nfcolpoints}{RGB}{100,100,100} 
                    \definecolor{nfcolaccent}{RGB}{100,116,139} 
                    \definecolor{nfcolbglight}{RGB}{236,240,245} 
                }% 
            }% 
        }% 
    }% 
} 

% Appliquer le thème par défaut au chargement 
\nf@applytheme{moderne} 

